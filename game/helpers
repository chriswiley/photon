proc my_pg_exec { conn statement } {
  set result [ pg_exec $conn $statement ]
  if {[pg_result $result -status] != "PGRES_COMMAND_OK"} {
    puts "[pg_result $result -error] executing $statement"
  }
  return result
}

proc int_as_bool { myint } {
  if { $myint == 0 } {
    return "false"
  }
  return "true"
}